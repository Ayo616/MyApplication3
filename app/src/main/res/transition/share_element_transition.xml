<?xml version="1.0" encoding="utf-8"?>


<!--define your transition with shareelement in here-->
<transitionSet
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="3000"
    >
    <!--舒展效果 -->
    <explode />
    <!--渐变效果-->
    <fade/>
    <!--滑动效果-->
    <slide />
    <!--改变目标视图的布局边界-->
    <changeBounds/>
    <!--改变目标视图的缩放比例和旋转角度-->
    <changeTransform/>
    <!--裁剪目标视图边界-->
    <changeClipBounds/>
    <!--改变目标图片的大小和缩放比例-->
    <changeImageTransform/>
</transitionSet>
