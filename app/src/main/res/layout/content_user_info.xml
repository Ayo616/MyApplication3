<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/collasping"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activity.UserInfo"
    >

<!--   <ImageView
       android:layout_width="match_parent"
       android:layout_height="220dp"
       android:id="@+id/image_info"
       android:background="@mipmap/meizhi"

       />-->



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginTop="16dp"
            >


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_call_black_24dp"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0753-1234124"
                android:layout_marginLeft="122dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="3dp"
                android:textColor="@color/Primarytext"
                android:id="@+id/phone_user"
                android:textSize="15dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Moblie"
                android:textSize="13dp"
                android:layout_below="@+id/phone_user"
                android:layout_centerHorizontal="true"
                android:layout_alignLeft="@+id/phone_user"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="72dp">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_school_black_24dp"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Computer Science"
                android:layout_marginLeft="122dp"
                android:textSize="15dp"
                android:id="@+id/college_user"
                android:textColor="@color/Primarytext"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="College"
                android:textSize="13dp"
                android:layout_below="@+id/college_user"
                android:layout_centerHorizontal="true"
                android:layout_alignLeft="@+id/college_user"
                />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colordivice"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="72dp">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_email_black_24dp"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="464434814@qq.com"
                android:layout_marginLeft="122dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/Primarytext"
                android:id="@+id/email_user"
                android:layout_marginBottom="3dp"
                android:textSize="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="13dp"
                android:layout_below="@+id/email_user"
                android:layout_alignLeft="@+id/email_user"/>
        </RelativeLayout>




    </LinearLayout>


</RelativeLayout>
