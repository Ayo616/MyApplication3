<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:id="@+id/item_recycle">


    <com.github.siyamed.shapeimageview.CircularImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="14dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:src="@mipmap/meizhi"
        android:layout_centerVertical="true"
        app:siBorderWidth="2dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_item_recycle"
        android:textSize="16dp"
        android:text="hll"
        android:textAppearance="@android:style/TextAppearance.Material"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="16dp"
        tools:targetApi="lollipop" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:text="Weclome to my room and talk "
        android:layout_below="@id/tv_item_recycle"
        android:layout_alignLeft="@id/tv_item_recycle"/>




</RelativeLayout>
